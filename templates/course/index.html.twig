{% extends 'base.html.twig' %}

{% block title %}Hello ExerciseController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-5">
                {{ form(form) }}
            </div>
            <div class="col-12 col-md-6 offset-0 offset-md-1">
                {% for course in courses %}
                    <div class="card mt-3">
                        <div class="card-body">
                            {{ course.name }} <br/>
                            <span class="fw-light">{{ course.description }}</span> <br/>
                            <a href="{{ path('app_course_view', { course: course.id }) }}">Bekijk cursus</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
